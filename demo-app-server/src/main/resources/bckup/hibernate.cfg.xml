<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration SYSTEM "file:/d:/dtds/hibernate3.dtd">

<hibernate-configuration>

	<session-factory>

		<property name="hibernate.connecton.autocommit">false</property>
		<property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>

		<property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
		<property name="hibernate.connection.username">practice</property>
		<property name="hibernate.connection.password">system</property>

		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		
		<mapping class="org.demo.model.Employee"/>


	</session-factory>


</hibernate-configuration>